<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_click_bg_color"
    android:clickable="true"
    android:paddingLeft="@dimen/padding_xxl"
    android:paddingRight="@dimen/padding_xxl">

    <View
        android:id="@+id/space_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_line"
        android:layout_marginBottom="@dimen/padding_xl"
        android:background="@color/color_background" />

    <ImageView
        android:id="@+id/comment_head_view"
        android:layout_width="@dimen/view_height_xxl"
        android:layout_height="@dimen/view_height_xxl"
        android:layout_below="@id/space_view"
        android:layout_marginRight="@dimen/margin_xl"
        android:src="@drawable/icon_avatar_default" />

    <TextView
        android:id="@+id/comment_nickname_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/space_view"
        android:layout_marginTop="@dimen/margin_l"
        android:layout_toRightOf="@id/comment_head_view"
        android:text="脚踝终结者"
        android:textColor="@color/color_text"
        android:textSize="@dimen/text_size_40px" />

    <TextView
        android:id="@+id/comment_time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_nickname_view"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/comment_head_view"
        android:text="3小时前"
        android:textColor="@color/color_text_hint"
        android:textSize="@dimen/text_size_30px" />

    <TextView
        android:id="@+id/comment_value_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_time_view"
        android:layout_marginBottom="@dimen/padding_xl"
        android:layout_marginTop="@dimen/margin_xl"
        android:layout_toRightOf="@id/comment_head_view"
        android:text="A fellow doesn't last long on what he has done. He's got to keep on delivering as he goes along."
        android:textColor="@color/color_text_hint"
        android:textSize="@dimen/text_size_36px" />
</RelativeLayout>