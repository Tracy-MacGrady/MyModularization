<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_xxl"
        android:text="@string/auth_user"
        android:textColor="@color/color_text"
        android:textSize="@dimen/text_size_54px" />

    <include layout="@layout/layout_auth_password" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xl"
        android:orientation="vertical">

        <TextView
            android:id="@+id/num2"
            android:layout_width="@dimen/view_height_xxxxl"
            android:layout_height="@dimen/view_height_xxl"
            android:layout_centerHorizontal="true"
            android:background="@drawable/selector_auth_number_bg"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/color_text"
            android:textSize="@dimen/text_size_60px" />

        <TextView
            android:id="@+id/num1"
            android:layout_width="@dimen/view_height_xxxxl"
            android:layout_height="@dimen/view_height_xxl"
            android:layout_marginRight="@dimen/margin_xxxl"
            android:layout_toLeftOf="@id/num2"
            android:background="@drawable/selector_auth_number_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/color_text"
            android:textSize="@dimen/text_size_60px" />

        <TextView
            android:id="@+id/num3"
            android:layout_width="@dimen/view_height_xxxxl"
            android:layout_height="@dimen/view_height_xxl"
            android:layout_marginLeft="@dimen/margin_xxxl"
            android:layout_toRightOf="@id/num2"
            android:background="@drawable/selector_auth_number_bg"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/color_text"
            android:textSize="@dimen/text_size_60px" />

        <TextView
            android:id="@+id/num5"
            android:layout_width="@dimen/view_height_xxxxl"
            android:layout_height="@dimen/view_height_xxl"
            android:layout_below="@id/num2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_xxl"
            android:background="@drawable/selector_auth_number_bg"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/color_text"
            android:textSize="@dimen/text_size_60px" />

        <TextView
            android:id="@+id/num4"
            android:layout_width="@dimen/view_height_xxxxl"
            android:layout_height="@dimen/view_height_xxl"
            android:layout_alignBottom="@id/num5"
            android:layout_marginRight="@dimen/margin_xxxl"
            android:layout_toLeftOf="@id/num5"
            android:background="@drawable/selector_auth_number_bg"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/color_text"
            android:textSize="@dimen/text_size_60px" />

        <TextView
            android:id="@+id/num6"
            android:layout_width="@dimen/view_height_xxxxl"
            android:layout_height="@dimen/view_height_xxl"
            android:layout_alignBottom="@id/num5"
            android:layout_marginLeft="@dimen/margin_xxxl"
            android:layout_toRightOf="@id/num5"
            android:background="@drawable/selector_auth_number_bg"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/color_text"
            android:textSize="@dimen/text_size_60px" />

        <TextView
            android:id="@+id/num8"
            android:layout_width="@dimen/view_height_xxxxl"
            android:layout_height="@dimen/view_height_xxl"
            android:layout_below="@id/num5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_xxl"
            android:background="@drawable/selector_auth_number_bg"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/color_text"
            android:textSize="@dimen/text_size_60px" />

        <TextView
            android:id="@+id/num7"
            android:layout_width="@dimen/view_height_xxxxl"
            android:layout_height="@dimen/view_height_xxl"
            android:layout_alignBottom="@id/num8"
            android:layout_marginRight="@dimen/margin_xxxl"
            android:layout_toLeftOf="@id/num8"
            android:background="@drawable/selector_auth_number_bg"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/color_text"
            android:textSize="@dimen/text_size_60px" />

        <TextView
            android:id="@+id/num9"
            android:layout_width="@dimen/view_height_xxxxl"
            android:layout_height="@dimen/view_height_xxl"
            android:layout_alignBottom="@id/num8"
            android:layout_marginLeft="@dimen/margin_xxxl"
            android:layout_toRightOf="@id/num8"
            android:background="@drawable/selector_auth_number_bg"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/color_text"
            android:textSize="@dimen/text_size_60px" />

        <TextView
            android:id="@+id/num0"
            android:layout_width="@dimen/view_height_xxxxl"
            android:layout_height="@dimen/view_height_xxl"
            android:layout_below="@id/num8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_xxl"
            android:background="@drawable/selector_auth_number_bg"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/color_text"
            android:textSize="@dimen/text_size_60px" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="@dimen/view_height_xxxxl"
            android:layout_height="@dimen/view_height_xxl"
            android:layout_alignBottom="@id/num0"
            android:layout_marginRight="@dimen/margin_xxxl"
            android:layout_toLeftOf="@id/num0"
            android:background="@drawable/selector_auth_number_bg"
            android:gravity="center"
            android:text="X"
            android:textColor="@color/color_text"
            android:textSize="@dimen/text_size_60px" />

        <TextView
            android:id="@+id/ok_view"
            android:layout_width="@dimen/view_height_xxxxl"
            android:layout_height="@dimen/view_height_xxl"
            android:layout_alignBottom="@id/num0"
            android:layout_marginLeft="@dimen/margin_xxxl"
            android:layout_toRightOf="@id/num0"
            android:background="@drawable/selector_auth_number_bg"
            android:gravity="center"
            android:text="OK"
            android:textColor="@color/color_text"
            android:textSize="@dimen/text_size_60px" />
    </RelativeLayout>

    <Button
        android:id="@+id/cancel_auth_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_xxl"
        android:layout_marginTop="@dimen/margin_xxxl"
        android:background="@drawable/selector_cancle_auth"
        android:text="@string/cancel_auth_val"
        android:textColor="@color/color_text"
        android:textSize="@dimen/text_size_48px" />
</LinearLayout>