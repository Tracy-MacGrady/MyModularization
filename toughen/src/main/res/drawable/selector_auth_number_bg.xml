<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/color_white" />
            <stroke android:width="@dimen/view_height_line" android:color="@color/color_button_normal" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/color_text_hint" />
            <stroke android:width="@dimen/view_height_line" android:color="@color/color_button_pressed" />
        </shape>
    </item>
</selector>